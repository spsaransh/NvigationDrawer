<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="705dp"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginBottom="25dp"
        >
    <TextView
        android:id ="@+id/text_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:paddingLeft="5dp"
        android:clickable="true"



        />

    <ImageView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/happy"
        android:layout_marginLeft="180dp"
        android:background="@drawable/happyfeed"

       />
        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/neutral"
            android:layout_marginLeft="10dp"
            android:background="@drawable/neutralnfilled"
            android:layout_toRightOf="@+id/happy"


            />
        <ImageView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sad"
            android:layout_marginLeft="10dp"
            android:background="@drawable/sadunfilled"
            android:layout_toRightOf="@+id/neutral"

            />

    </RelativeLayout>


</LinearLayout>